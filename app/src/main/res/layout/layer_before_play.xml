<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark"
    xmlns:fresco="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/cover_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@null" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_70"
        android:background="@drawable/fore_play_title_bg" />

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/qb_px_12"
        android:layout_marginLeft="@dimen/qb_px_12"
        android:layout_marginTop="@dimen/qb_px_6"
        android:layout_marginEnd="@dimen/qb_px_12"
        android:layout_marginRight="@dimen/qb_px_12"
        android:ellipsize="end"
        android:maxLines="2"
        android:shadowColor="@color/black_54"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="4"
        android:textColor="@color/white_100"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="video title, this is interesting" />

    <ImageView
        android:id="@+id/play_btn"
        android:layout_width="@dimen/qb_px_50"
        android:layout_height="@dimen/qb_px_50"
        android:layout_centerInParent="true"
        android:contentDescription="@null"
        android:src="@drawable/feed_play_btn" />

    <TextView
        android:id="@+id/duration_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="@dimen/qb_px_10"
        android:layout_marginRight="@dimen/qb_px_10"
        android:layout_marginBottom="@dimen/qb_px_8"
        android:background="@drawable/fore_duration_tv_bg"
        android:gravity="center"
        android:paddingLeft="@dimen/qb_px_4"
        android:paddingTop="@dimen/qb_px_1"
        android:paddingRight="@dimen/qb_px_4"
        android:paddingBottom="@dimen/qb_px_1"
        android:textColor="@color/white_100"
        android:textSize="12sp"
        tools:text="02:49"
        tools:visibility="visible" />

</RelativeLayout>
