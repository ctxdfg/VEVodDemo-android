<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    tools:background="#CCCCCC">

    <ImageView
        android:id="@+id/userAvatar"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentLeft="true"
        android:background="@drawable/ic_avatar_bg" />

    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/userAvatar"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/userAvatar"
        android:gravity="center_vertical"
        android:text="Awesome User"
        android:textSize="12dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/userDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/userName"
        android:layout_alignBottom="@+id/userAvatar"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/userAvatar"
        android:gravity="center_vertical"
        android:text="I am Awesome! My video is Awesome!"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/videoDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/userAvatar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:text="This is an awesome video. Please enjoy it!"
        android:textSize="14dp" />

</RelativeLayout>